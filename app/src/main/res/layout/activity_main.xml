<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list"
    android:id="@+id/mainLayout"
    tools:context=".MainActivity">

    <com.example.tarkovtreequest.CustomLinearLayout
        android:id="@+id/treeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center"
        android:hardwareAccelerated="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textSize="30sp"
            android:padding="10dp"
            android:text="Добро пожаловать\nв Дерево квестов игры\nEscape from Tarkov!">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textSize="23sp"
            android:padding="10dp"
            android:text="Выберите торговца\nв Панели управления слева,\nчтобы увидеть его дерево квестов.">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textSize="23sp"
            android:padding="10dp"
            android:text="Буду признателен, если вы оцените приложение и напишите рекомендации в RuStore.">
        </TextView>

        <Button
            android:id="@+id/rustoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="RuStore" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textSize="30sp"
            android:padding="10dp"
            android:text="Удачи, Тарковчанин! :)">
        </TextView>

    </com.example.tarkovtreequest.CustomLinearLayout>

    <LinearLayout
        android:id="@+id/traderLayoutMain"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="start"
        android:padding="5dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">
    </LinearLayout>

</FrameLayout>